<div class="photo-card">
  <img src="" alt="" loading="lazy" />
  <div class="info">
    <p class="info-item">
      <b>Likes</b>
    </p>
    <p class="info-item">
      <b>Views</b>
    </p>
    <p class="info-item">
      <b>Comments</b>
    </p>
    <p class="info-item">
      <b>Downloads</b>
    </p>
  </div>
</div>

{{#each this}}
  <li>
    <a href="{{url}}" target="_blank" rel="noopener noreferrer">
      <article>
        <img src="{{urlToImage}}" alt="" width="480">
        <h2>{{title}}</h2>
        <p>Posted by: {{author}}</p>
        <p>{{description}}</p>
      </article>
    </a>
  </li>
{{/each}}